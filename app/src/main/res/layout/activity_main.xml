<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <com.wm.easyintro.view.SpinnerView
        android:id="@+id/transformer_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:width="200dp"
        app:title="滑动动画:"
        />
    <com.wm.easyintro.view.SpinnerView
        android:id="@+id/indicator_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="指示器款式:"
        />
    <com.wm.easyintro.view.SpinnerView
        android:id="@+id/indicator_style_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:width="150dp"
        app:title="指示器Style:"
        />
    <com.wm.easyintro.view.SpinnerView
        android:id="@+id/indicator_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="指示器Type:"
        app:width="150dp"
        />
    <com.wm.easyintro.view.SpinnerView
        android:id="@+id/indicator_two_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="指示器Type:"
        app:width="150dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            style="@style/text_style"
            android:text="选中颜色："
            />
        <ImageView
            android:id="@+id/select_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/white"
            />
        <TextView
            style="@style/text_style"
            android:text="未选中颜色："
            android:layout_marginLeft="50dp"
            />
        <ImageView
            android:id="@+id/unSelect_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#000000"
            android:alpha="0.6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="启动"
            android:background="@drawable/btn_bg"
            />
    </LinearLayout>
</LinearLayout>